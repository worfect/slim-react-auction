{
  "name": "worfect/slim-react-auction",
  "type": "project",
  "license": "BSD-3-Clause",
  "require": {
    "php": "^7.4",
    "php-di/php-di": "^6.3",
    "slim/psr7": "^1.4",
    "slim/slim": "^4.8",
    "symfony/console": "^5.3",
    "ext-json": "*"
  },
  "require-dev": {
    "overtrue/phplint": "^2.0",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "3.*",
    "vimeo/psalm": "^4.9"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {

  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": "phplint",
    "check": "phpcs",
    "fix": "phpcbf",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html var/coverage"
  }
}
